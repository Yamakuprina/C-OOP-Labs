<Window x:Class="Reports.DesktopClient.ReportsServices.ReportsService"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Reports.DesktopClient.ReportsServices"
        mc:Ignorable="d"
        Title="ReportsService" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text ="Choose an option: " FontSize="25"/>
            <Button Padding="5" Margin="5" Click="CreateWeeklyReport">1. Create weekly report</Button>
            <Button Padding="5" Margin="5" Click="GetTasksOnWeek">2. Get tasks on this week</Button>
            <Button Padding="5" Margin="5" Click="GetSubordinatesReports">3. Get subordinates reports</Button>
            <Button Padding="5" Margin="5" Click="GetSubordinatesWithNoReports">4. Get subordinates without reports</Button>
            <Button Padding="5" Margin="5" Click="AddTaskToReport">5. Add completed task to report</Button>
            <Button Padding="5" Margin="5" Click="UpdateReport">6. Update report</Button>
            <Button Padding="5" Margin="5" Click="Go_back">7. Go back</Button>
        </StackPanel>
    </Grid>
</Window>
