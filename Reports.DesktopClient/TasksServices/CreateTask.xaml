<Window x:Class="Reports.DesktopClient.TasksServices.CreateTask"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Reports.DesktopClient.TasksServices"
        mc:Ignorable="d"
        Title="CreateTask" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text ="Fill required fields: " FontSize="25"/>
            <TextBox Name="TextBoxEmployeeName" materialDesign:HintAssist.Hint="Enter Stated Employee Name" FontSize="25" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBox Name="TextBoxTaskName" materialDesign:HintAssist.Hint="Enter Task Name" FontSize="25" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <TextBlock Name="H1Created" Text="" FontSize="25"/>
            <TextBlock Name="CreatedTask" Text="" FontSize="25"/>
            <Button Padding="5" Margin="5" Click="Create">Create</Button>
            <Button Padding="5" Margin="5" Click="Go_back">Go back</Button>
        </StackPanel>
    </Grid>
</Window>
